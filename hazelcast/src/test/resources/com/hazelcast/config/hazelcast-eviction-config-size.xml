<hazelcast
        xsi:schemaLocation="http://www.hazelcast.com/schema/config http://www.hazelcast.com/schema/config/hazelcast-config-3.9.xsd"
        xmlns="http://www.hazelcast.com/schema/config"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <!-- map configurations -->

    <map name="default">
        <near-cache/>
    </map>

    <map name="myMap">
        <near-cache/>
    </map>

    <map name="myCustomMap">
        <near-cache>
            <eviction size="23"/>
        </near-cache>
    </map>

    <map name="myNativeNearCacheMap">
        <near-cache>
            <in-memory-format>NATIVE</in-memory-format>
        </near-cache>
    </map>

    <map name="myCustomNativeNearCacheMap">
        <near-cache>
            <in-memory-format>NATIVE</in-memory-format>
            <eviction size="23"/>
        </near-cache>
    </map>

    <!-- cache configurations -->

    <cache name="default">
        <eviction/>
    </cache>

    <cache name="myCache">
        <eviction/>
    </cache>

    <cache name="myCustomCache">
        <eviction size="23"/>
    </cache>
</hazelcast>
